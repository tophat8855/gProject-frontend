<div class="wrapper">
  <form class="form-signup" {{action 'signUp' on='submit'}}>
    <h2 class="form-signin-heading">Sign Up</h2>
    {{input value=email placeholder='email' class="form-control"}}

    {{input value=password placeholder='password' type='password' class="form-control"}}

    <button class="btn btn-lg btn-primary " type="submit" {{action 'signUp'}}>Sign Up</button>
  </form>
</div>
