<form class="">
  <div class="form-group">
    <span class="label label-default">Starting BART Station</span>

    <div name="start">
      {{view 'select'
        id='startBART'
        content=stations
        value=selectedStartStation
        optionValuePath="content.id"
        optionLabelPath="content.stationName"
        selectionBinding="content.selectedObject"}}
    </div>
  </div>

  <div class="form-group">
    <span class="label label-default">Ending BART Station</span>

    <div name="end">
      {{view 'select'
        id='endBART'
        content=stations
        value=selectedEndStation
        optionValuePath="content.id"
        optionLabelPath="content.stationName"
        selectionBinding="content.selectedObject"}}
    </div>
  </div>

  <button class="btn btn-primary" id='calculate' {{action 'calculateBartMiles' selectedStartStation selectedEndStation}}>Calculate</button>

</form>

{{#if distance}}
<div class="bart-miles">
  Distance between stations: {{distance}} miles. Emissions saved: {{emissions}} pounds of CO2
</div>
<button class="btn btn-primary" id='saveBart' {{action 'saveBART' selectedStartStation selectedEndStation distance emissions}}>Save BART leg</button>
{{/if}}
