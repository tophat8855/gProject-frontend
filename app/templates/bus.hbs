<h3>Busing</h3>

<form class="">
  <div class="form-group">
    <span class="label label-default">Route</span>

    <div class="form-control" placeholder="Route">
      {{input id='route' value=route}}
    </div>
  </div>

  <div class="form-group">
    <span class="label label-default">Direction</span>

    <div name="direction">
      {{view 'select'
        id='direction'
        content=directions
        value=selectedDirection
        optionValuePath="content.id"
        optionLabelPath="content.lengthyDirection"
        selectionBinding="content.selectedObject"}}
    </div>
  </div>

  <div class="form-group">
    <span class="label label-default">Starting address</span>

    <div class="form-control" placeholder="starting address">
      {{input id='startAddress' value=startBus}}
    </div>
  </div>

  <div class="form-group">
    <span class="label label-default">Ending address</span>

    <div type="text" class="form-control" placeholder="ending address">
      {{input id='endAddress' value=endBus}}
    </div>
  </div>

  <button class="btn btn-primary" id='calculate' {{action 'calculateBusMiles' startBus endBus}}>Calculate</button>
</form>

{{#if distance}}
<div class="bus-miles">
  Distance bused: {{distance}}
  Emissions saved: {{emissions}}
</div>
<button class="btn btn-primary" id='saveBus' {{action 'saveBus' startBus endBus distance emissions route direction}}>Save bus leg</button>
{{/if}}
