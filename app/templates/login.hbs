<div class="wrapper">
  <form class="form-signin" {{action 'authenticate' on='submit'}}>
    <h2 class="form-signin-heading">Please login</h2>
    {{input value=identification placeholder='email' class="form-control"}}

    {{input value=password placeholder='password' type='password' class="form-control"}}

    <button class="btn btn-lg btn-primary " type="submit">Login</button>
  </form>
</div>
