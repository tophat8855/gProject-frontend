<h2 id="title">Welcome to your Carfree Commute</h2>

{{#if session.isAuthenticated}}
  <button {{ action 'invalidateSession' }}>Logout</button>
{{else}}
  <form class="" {{action 'authenticate' on='submit'}}>
    <div class="form-group">
      {{input value=identification placeholder='email'}}
    </div>

    <div class="form-group">
      {{input value=password placeholder='password' type='password'}}
    </div>

    <div class="form-group">
      <button type="submit" {{action 'authenticate' on='submit'}}>Login</button>
    </div>
  </form>
{{/if}}
